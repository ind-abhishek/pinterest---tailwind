<% include ./partials/header.ejs %>
  <div class="w-full min-h-sceen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a new post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/cratepost" method="post" enctype="multipart/form-data">
      <input class="text-black block w-1/3 px-3 py-2" type="file" name="postimage">
      <input name="title" class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2" type="text"
        placeholder="Title">
      <textarea class="text-black block w-1/3 h-60 px-3 py-2 border-2 rounded-md mt-2" type="text"
        placeholder="Description" name="description"></textarea>
      <input class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2 bg-red-700 rounded-md" type="submit"
        value="Create Post ">
    </form>
  </div>
  <% include ./partials/footer.ejs %>