  <div class="h-screen flex justify-center items-center">
    <!-- Background Image -->
    <!-- <div class="absolute inset-0 bg-cover bg-center z-0" style="background-image: url('');">
    </div> -->

    <!-- Form Container -->
    <div class="w-full max-w-lg bg-white px-10 py-5 rounded-lg shadow-lg z-10">
      <h1 class="text-xl text-center mb-3">Create a new post</h1>
      <hr class="opacity-10">
      <form class="mt-4" action="/cratepost" method="post" enctype="multipart/form-data">
        <input class="text-black block w-full px-3 py-2 border-2 rounded-md mb-2" type="file" name="postimage">
        <input name="title" class="text-black block w-full px-3 py-2 border-2 rounded-md mb-2" type="text"
          placeholder="Title">
        <textarea class="text-black block w-full h-40 px-3 py-2 border-2 rounded-md mb-2" placeholder="Description"
          name="description"></textarea>
        <input
          class="text-white block w-full px-3 py-2 border-2 rounded-md bg-red-700 rounded-md hover:bg-red-600 transition duration-300"
          type="submit" value="Create Post">
      </form>
    </div>
  </div>
