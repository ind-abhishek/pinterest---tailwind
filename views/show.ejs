<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-white px-10 py-8 text-black ">

    <h1 class="font-semibold mb-7 flex justify-center text-2xl">Your Collection</h1>
    <hr class="opacity-10 mt-3 ">
    <div class="cards flex flex-wrap gap-10">
      <% user.posts.forEach(function(post){ %>
        <div class="cards w-32 font-semibold">
          <div class="w-full h-60 rounded-xl overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= post.postimage %>">
          </div>
          <h5 class="mt-2 text-sm">
            <%= post.title %>
          </h5>
          <h6 class="text-xs opacity-50">
            @<%=user.username%>
          </h6>
        </div>
        <% })%>
    </div>
  </div>
  <% include ./partials/footer.ejs %>