<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
      <% user.posts.forEach(function(post){ %>
        <div class="cards w-32">
          <div class="w-full h-40 rounded-lg overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= post.postimage %>">
          </div>
          <h5 class="mt-2 text-sm">
            <%= post.title %>
          </h5>
          <h6 class="text-xs opacity-50">
            @<%=user.username%>
          </h6>
        </div>
        <% })%>
    </div>
  </div>
  <% include ./partials/footer.ejs %>